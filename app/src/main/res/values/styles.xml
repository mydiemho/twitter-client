<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Default actionbar -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/default_action_bar_background</item>
        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
    </style>

    <style name="MyActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/default_action_bar_title_text_color</item>
    </style>

    <!-- Timeline actionbar -->
    <style name="TimelineTheme" parent="AppTheme">
        <item name="actionBarTabStyle">@style/TimelineTheme.ActionBar.Tab</item>
        <item name="actionBarTabBarStyle">@style/TimelineTheme.ActionBar.TabBar</item>
    </style>

    <style name="TimelineTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar" >
    </style>

    <style name="TimelineTheme.ActionBar.Tab" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_bar_background</item>
    </style>

    <style name="TimelineTheme.ActionBar.TabBar" parent="@style/Widget.AppCompat.Light.ActionBar.TabBar">
        <item name="android:actionBarTabTextStyle">@android:color/black</item>
    </style>

    <!-- Compose actionbar -->
    <style name="ComposeTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/ComposeTheme.ActionBar</item>
    </style>

    <style name="ComposeTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/compose_activity_action_bar_background</item>
    </style>

    <!-- Detail view actionbar -->
    <style name="DetailedTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/DetailedTheme.ActionBar</item>
    </style>

    <style name="DetailedTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/DetailedTheme.ActionBar.TitleTextStyle</item>
        <item name="android:background">@color/detailed_activity_action_bar_background</item>
    </style>

    <style name="DetailedTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/detailed_activity_title_color</item>
    </style>
</resources>
